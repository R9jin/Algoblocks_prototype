{
  "version": 2,
  "builds": [
    {
      "src": "backend/main.py",
      "use": "@vercel/python"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/backend/main.py" },
    { "source": "/(.*)", "destination": "/frontend/$1" }
  ],
  "redirects": [
    { "source": "/", "destination": "/frontend/index.html" }
  ]
}